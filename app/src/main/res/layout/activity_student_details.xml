<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="#fff"
    >
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/reg_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="#fff"
            android:layout_below="@id/reg_bg"
            android:id="@+id/login_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <TextView
               android:padding="15dp"

                android:textColor="#fff"
                android:textSize="20dp"
              android:background="@drawable/spinnerbg"

                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Student Details"
                android:textStyle="bold"
                android:gravity=""/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Absent Student Name"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:id="@+id/et_studentname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Absent Student Name"
                    android:textColorHint="@color/dark_gray"
                    android:inputType="text"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="@dimen/login_txt_size"

                    android:visibility="visible"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grade/Section"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/et_gradesection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Grade/Section"
                    android:textColorHint="@color/dark_gray"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/login_txt_size"
                    android:visibility="visible"
                    android:focusable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Email 1"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/et_parentemail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Parent Email 1"
                    android:textColorHint="@color/dark_gray"
                    android:inputType="textEmailAddress"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/login_txt_size"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Email 2"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/et_parentemail2"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Parent Email 2"
                    android:textColorHint="@color/dark_gray"
                    android:inputType="textEmailAddress"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/login_txt_size"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button

                    android:id="@+id/btnsave"
                    android:textColor="#fff"
                    android:background="@drawable/spinnerbg"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_gray"
                    android:text="Save"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/login_txt_size"
                    android:visibility="visible"
                    />

                <Button
                    android:textColor="#fff"
                    android:background="@drawable/spinnerbg"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_gray"
                    android:text="Cancel"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/login_txt_size"
                    android:visibility="visible"
                    android:id="@+id/btncancle" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

